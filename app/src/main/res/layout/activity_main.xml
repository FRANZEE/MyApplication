<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:text="@string/btnHelloWorld"
        android:id="@+id/btnHelloWorld"
        android:layout_marginTop="120dp"
        android:singleLine="false"
        android:textAllCaps="false"
        android:onClick="sayHello"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:text="@string/btnGoodBye"
        android:id="@+id/btnGoodBye"
        android:singleLine="false"
        android:textAllCaps="false"
        android:onClick="sayGoodBye"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnHelloWorld"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/btnToAnotherActivity"
        android:id="@+id/btnToAnotherActivity"
        android:singleLine="false"
        android:textAllCaps="false"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:onClick="toAnotherActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="text"
        android:id="@+id/textView"
        android:layout_above="@+id/btnGoodBye"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textSize="40dp" />
</RelativeLayout>
